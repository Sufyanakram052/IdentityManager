@model ForgetPasswordViewModel

<h1 class="text-info">Forgot Your Password</h1>
<div class="row">
	<div class="col-md-8">
		<form asp-controller="Account" asp-action="ForgetPassword" method="post" role="form">
			<h4>Enter Your Email</h4>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group mt-2">
				<label asp-for="Email" class="col-md-2"></label>
				<div class="col-md-10">
					<input asp-for="Email" class="form-control mt-2" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group mt-2">
				<div class="col-md-12">
					<button type="submit" class="btn btn-success">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}