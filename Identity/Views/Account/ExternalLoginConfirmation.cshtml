@model ExternalLoginConfirmationViewModel

<h1 class="text-info">Register</h1>
<h3 class="text-info">Assoicate your @ViewData["ProviderDisplayName"] account.</h3>

<form asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
	<h4>Create New Account</h4>
	<hr />
	<div asp-validation-summary="All" class="text-danger"></div>
	<p>
		You've successfully authenticated with <strong>@ViewData["ProviderDisplayName"]</strong>.
		Please enter a user name for this site below and click the register button to finish
		logging in.
	</p>
	<div class="form-group mt-2">
		<label asp-for="Email" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Email" class="form-control mt-2" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mt-2">
		<label asp-for="Name" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Name" class="form-control mt-2" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group mt-2">
		<div class="col-md-12">
			<button type="submit" class="btn btn-success">Register</button>
		</div>
	</div>
</form>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}